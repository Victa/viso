<header id="header">
  <% unless drop.subscribed? %>
    <h1><a href="http://store.getcloudapp.com/">Simple sharing</a></h1>
  <% end %>

  <h2><%= escape_html drop.name %></h2>

  <a class="embed" href="<%= drop.content_url %>">Direct link</a>
</header>

<section class="monsoon" id="content">
  <% if drop.plain_text? %>
    <pre><code><%= escape_html drop.content %></code></pre>
  <% else %>
    <%= drop.content %>
  <% end %>
</section>
